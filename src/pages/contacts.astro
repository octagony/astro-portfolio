---
import { AiOutlineMail } from 'react-icons/ai'
import { BsLinkedin, BsTelegram } from 'react-icons/bs'
import BaseHead from '../components/astro/BaseHead.astro'
import Body from '../components/astro/Body.astro'
import Footer from '../components/astro/Footer.astro'
import Header from '../components/astro/Header.astro'
import MainContent from '../components/astro/MainContent.astro'
import ThemeToggle from '../components/tsx/ThemeToggleButton'
import { SITE_DESCRIPTION, SITE_TITLE } from '../config'
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Body>
		<Header title={SITE_TITLE} />
		<main class='pt-20 font-heebo'>
			<MainContent>
				<section class='h-[85vh] mt-1'>
					<h2 class='text-center text-2xl'>
						You can always find me at the following addresses:
					</h2>
					<div
						class='flex flex-wrap flex-col sm:flex-row sm:justify-between items-center gap-4 my-12 px-6'
					>
						<a
							href='https://t.me/tnotu'
							target='_blank'
							class='block mx-auto my-2 p-2 text-center mb-4 sm:mx-auto'
							aria-label='Link to Telegram'
						>
							<BsTelegram size={60} className='mx-auto mb-3' />
							Telegram
						</a>
						<a
							class='block mx-auto my-2 p-2 text-center mb-4 sm:mx-auto'
							href='mailto:moctagony@gmail.com'
							target='_blank'
							aria-label='Link to email'
						>
							<AiOutlineMail size={60} className='mx-auto mb-3' />
							Email</a
						>
						<a
							href='https://www.linkedin.com/in/mihail-ruckiy-7a309323a/'
							target='_blank'
							class='block p-2 text-center mb-4 sm:basis-full'
							aria-label='Link to Linkedin'
						>
							<BsLinkedin size={60} className='mx-auto mb-3' />
							Linkedin</a
						>
					</div>
				</section>
			</MainContent>
		</main>
		<Footer />
		<ThemeToggle client:load />
	</Body>
</html>
