---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Body from "../components/Body.astro"
import MainContent from '../components/MainContent.astro';

export interface Props {
	content: {
		title: string;
		pubDate?: string;
    description? : string;
		updatedDate?: string;
		heroImage?: string;
    tools: string[]
	};
}

const {
	content: { title, description, pubDate,  heroImage, tools },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<Body>
		<Header />
		<main class="pt-20">
      <MainContent classname="mb-8 text-center">
			<div class='mb-8'>
				{heroImage && <img class="border-slate-300 dark:border-zinc-700 rounded-xl" width={720} height={360} src={heroImage} alt="" />}
				<h1 class="text-3xl my-1 font-heebo">{title}</h1>
				{pubDate && <time>{pubDate}</time>}
          {description}
        </div>
        {tools.map(tool =>  tool + ' ')}
				<hr class="border-top border-zinc-400 my-4" />
				<slot />
        <span class="underline underline-offset-2 hover:text-pink-400 decoration-pink-400 text-2xl"></span>
      </MainContent>
		</main>
		<Footer />
	</Body>
</html>
